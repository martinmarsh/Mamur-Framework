<?xml version="1.0" standalone="yes"?>
<configuration>
  <!-- settings are various configurations which have simple set tags to a allow
       a configuartion variable to be set to a value.
  -->
  <settings>
     <!-- caution: leave set to done if set installed to empty string will re-install -->
     <set installed="done"/>

     <!-- api ID is new on first install, when installed should not be changed  -->
     <set apiId="F062030415MTXKR"/>

     <!--error printing (set to none, major, or all)
         As print is seen by users best set to none for post launch web sites-->
     <set errorPrint="major"/>

     <!--error logging (set to none, major or all) Silently Logs error to error files.
         Use "all" for testing/problem solving and "major" for long term in service setting
         Use "none" if site is fully working and you need to ensure large files cannot occur.
          -->
     <set errorLog="all"/>
	 
	 <!-- set debug trace to log a trace of varaiables and backtrack on user error  -->
	 <set debugTrace="Yes"/>
	  <!-- ******** Important you must set firePhp to NO on production sites-->
	     firePhp lets you see error message via fireBug console and you can use
	 <set firePhp="yes" />

     <!-- default home page  -->
     <set homePage="index.html"/>
     <set pageExt="html"/>

     <!-- pagetimer tag will show page time if this is set to on
          useful for development purposes - set to off to hide -->
     <set pageTime="on"/>

     <!-- set to yes to allow session cookie to be set supports user login, admin login
          session id for use by plugins to save session datasets -->
     <set allowSessionCookie="yes"/>

     <!-- set to yes to allow permanent location id cookie to be set supports metrics
          allows returning visitors to be accessed when log plugin is used -->
     <set allowPermCookie="yes"/>

     <!-- set sessionTimeOut="3600" to clear down dataset sessions after 1 hr of inactivity
          this will cause lost of all dataset information unless a plugin traps the
          clean up attempt and extends the session, This has nothing to do with php sessions -->
     <set sessionTimeOut="3600"/>

     <!-- set loginTimeOut="900" to log out user after 15 mins of inactivity login does
          not depend on sessions and can be longer or shorter-->
     <set loginTimeOut="900"/>

     <!-- The protected tag will if not logged, cause a redirect to this page by default
          note if you delete loginPage setting - login.htm is assumed anyway.-->
     <set loginPage="login.html"/>

     <!-- time sessions last cleared - updated by system -->
     <set sessionCleaned="1305247723"/>

     <!-- salt string of random characters >116 set to "new" to re-randomise for security  -->
     <set salt="VpZw9b4OfDeEJNI53zNHKh5hTexGAkRyYS5bGwzkspaS2R4Tb8s35Vw92kN6lIlyOiKTbDCuRojuFiWNKelRAwtbTdPK5ssLRKVYiY8REBfjXMxtHAQ6B"/>

     <!-- version status -->

      <set mamurVersion="1.03"/>
      <set adminApiVersion="1.03"/>

      <set serverTimeZone="UTC"/>
      <set userTimeZone="UTC"/>

      </settings>

  <!--globals are strings which can be inserted using the global tag
    each global is definded as server example below
  -->
  <globals>
        <global name="server">served by &lt;a href="http://www.mamur.org" &gt;Mamur&lt;/a&gt;</global>
   <!--  this message says it is not active - if you display the global using a tag the message will be changed if it
  is active ie this the failure message not the current status message
  -->
      <global name="adminapi_plugin">admin api plugin is active</global>
     <global name="logs_plugin">logs plugin is active</global>
     <global name="login_plugin">login plugin is running</global>
  </globals>

<!-- order is important first http request to full fill match will invoke that controller -->
  <controllers>
  	  <controller name="mamurAdminController" match="@\/admin\/.*?@"/>
  	  <controller name="mamurMainController" match="@.*@"/>	
  </controllers>
  
  <!-- example of future plugin config  -->
  <plugins>
        <plugin name="adminapi" status="inactive" file="adminapi/adminapi.php" version="1.03"/>
        <plugin name="cms_service" status="inactive" file="cms_service/cms_service.php" version="1.03"/>
        <plugin name="forms" status="inactive" file="forms/forms.php" version="1.01"/>
        <plugin name="admin" status="active" file="admin/admin.php" version="1.01"/>
        <plugin name="logs" status="inactive" file="logs/logs.php" version="1.01"/>
        <plugin name="common_functions" status="active" file="common_functions/common_functions.php" version="1.01"/>
  </plugins>
  
 <classes>
	<type name="system">
	    <module name="core">
	    	<controllers>
	    		<class name="mamurController" type="static" load="onstart"/>
	        </controllers>
			<models>
				<class name="mamurModel" type="static" load="onstart"/>
				<class name="mailClass" type="public" load="ondemand"/>
			</models>
		    <views>
		    	<class name="mamurView" type="static" load="onstart"/>
		    	<class name="formTags" type="public" load="ondemand"/>
		    </views>
	    </module>
		<module name="admin">
	    	<controllers>
	    		<class name="adminController" type="static" load="ondemand"/>
	        </controllers>
			
	    </module>
		
	</type>
</classes>	



